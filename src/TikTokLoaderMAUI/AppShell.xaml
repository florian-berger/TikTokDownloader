<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TikTokLoaderMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TikTokLoaderMAUI"
    xmlns:i18n="clr-namespace:TikTokLoaderMAUI.i18n"
    FlyoutBehavior="Flyout">

    <ShellContent
        Title="{x:Static i18n:DownloadResource.Title}"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="{x:Static i18n:SettingsResource.Title}"
        ContentTemplate="{DataTemplate local:SettingsPage}"
        Route="SettingsPage" />

    <ShellContent
        Title="{x:Static i18n:InfoResource.Title}"
        ContentTemplate="{DataTemplate local:InfoPage}"
        Route="InfoPage" />
</Shell>
